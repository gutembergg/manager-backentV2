{
  "openapi": "3.0.0",
  "info": {
    "title": "Manager clients and projects",
    "description": "Api of manager clients and projects for d√®veloper",
    "termsOfService": "http://example.com/terms/",
    "contact": {
      "name": "Gutembergue Mascarenhas",
      "email": "gmascarenhas3001@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/api",
      "description": "url of tests"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Register users",
        "description": "create user in database",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "Email already exists"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/session": {
      "post": {
        "summary": "Authenticate user session",
        "description": "Authenticte user if email and password",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/Session"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Authorizaded"
          }
        }
      }
    },
    "/users/{id}": {
      "patch": {
        "summary": "activete / deactivate user",
        "description": "Activate and deactivate in the case not utiliyation",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Activete user by ID",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "User not found"
          },
          "401": {
            "description": "Invailid Id"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Session": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}
